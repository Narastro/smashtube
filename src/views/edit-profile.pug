extends base

block content 
    form(method="POST",enctype="multipart/form-data").edit-profile__form
        label(for="avatar") 프로필 사진
        input(type="file",id="avatar",name="avatar",accept="image/*")
        input(placeholder="이름",name="name", type="text",required,value=loggedInUser.name)
        input(placeholder="이메일",name="email", type="email",required,value=loggedInUser.email)
        input(placeholder="유저ID",name="username", type="text",required,value=loggedInUser.username)
        input(placeholder="장소(선택)",name="location", type="text",required,value=loggedInUser.location)
        input(type="submit",value="수정하기")
        if !loggedInUser.socialOnly
            div.edit-profile__password
                a(href="change-password") Change Password &rarr;