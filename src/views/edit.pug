extends base
include mixins/video

block content 
    h4 Update Video
    form(method="POST")
        input(name="title",placeholder="Title",required,type="text",maxlength="80",value=video.title)
        input(name="description",placeholder="Description",required,type="text",maxlength="140",value=video.description)
        input(name="hashtags",placeholder="Hashtags, seperated by comma.",required,type="text",value=video.hashtags.join())
        input(type="submit",value="Upload Video")
